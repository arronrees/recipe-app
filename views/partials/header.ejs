<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Recipe App</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Belleza&family=Bitter:wght@300;400;600&display=swap"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="/reset.css" />
    <link rel="stylesheet" href="/style.css" />
  </head>

  <body>
    <header class="header">
      <nav class="navbar">
        <h1 class="logo"><a href="/">Recipe App</a></h1>

        <ul class="nav__menu">
          <li>
            <a class="add" href="/recipes/new"> Add Recipe </a>
          </li>
          <% if (user) { %>
          <li class="profile">
            <a href="/profile"> My profile </a>
          </li>
          <li>
            <button type="button" class="sign__out__btn">Sign Out</button>
          </li>
          <% } else { %>
          <li>
            <a class="login" href="/log-in">Log In </a>
          </li>
          <li>
            <a class="signup" href="/sign-up">Sign Up </a>
          </li>
          <% } %>
        </ul>
      </nav>
    </header>

    <script>
      if (!!document.querySelector('.sign__out__btn')) {
        const signOutBtn = document.querySelector('.sign__out__btn');

        async function signOut() {
          const res = await fetch('http://localhost:5000/sign-out', {
            method: 'POST',
          });

          const data = await res.json();

          if (data.success) {
            window.location.assign('/recipes');
          } else {
            window.location.reload();
          }
        }

        signOutBtn.addEventListener('click', () => {
          signOut();
        });
      }
    </script>