<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Recipe App</title>
  <link rel="stylesheet" href="/reset.css" />
  <link rel="stylesheet" href="/style.css" />
</head>

<body>
  <header class="header">
    <nav class="navbar">
      <h1 class="logo"><a href="/">Recipe App</a></h1>

      <ul class="nav__menu">
        <li>
          <a href="/recipes/new"> Add Recipe </a>
        </li>
        <% if (user) { %>
          <li>
            <a href="/profile"> My profile </a>
          </li>
          <li>
            <button type="button" class="sign__out__btn">Sign Out</button>
          </li>
          <% } else { %>
            <li>
              <a href="/log-in"> Log In </a>
            </li>
            <li>
              <a href="/sign-up"> Sign Up </a>
            </li>
            <% } %>
      </ul>
    </nav>
  </header>

  <script>
    if (!!document.querySelector('.sign__out__btn')) {
      const signOutBtn = document.querySelector('.sign__out__btn');

      async function signOut() {
        const res = await fetch('http://localhost:5000/sign-out', {
          method: 'POST',
        });

        const data = await res.json();

        if (data.success) {
          window.location.assign('/recipes');
        } else {
          window.location.reload();
        }
      }

      signOutBtn.addEventListener('click', () => {
        signOut();
      });
    }
  </script>