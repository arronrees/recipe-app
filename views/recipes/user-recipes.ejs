<%- include('../partials/header'); -%>

<main>
  <section class="recipe__grid">
    <% recipes.forEach(recipe=> { %>
    <a href="/recipes/<%=recipe._id%>" class="grid__recipe">
      <article>
        <figure>
          <img src="<%=recipe.image%>" alt="<%=recipe.name%>" />
        </figure>

        <h3><%=recipe.name%></h3>

        <h4><%=recipe.user.username%></h4>

        <ul class="categories">
          <% recipe.categories.forEach(cat=> { %>
          <li>#<%=cat%></li>
          <% })%>
        </ul>

        <p class="desc"><%=recipe.description.substr(0, 100)%> ...</p>

        <h6 class="likes"><%=recipe.likes%></h6>
      </article>
    </a>
    <% }) %>
  </section>
</main>

<%- include('../partials/footer'); -%>
