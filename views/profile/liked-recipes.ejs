<%- include('../partials/header'); -%>

  <main class="grid">
    <section class="recipe__grid">
      <% if (recipes.length> 0) { %>
        <% recipes.forEach(recipe=> { %>
          <a href="/recipes/<%=recipe._id%>" class="grid__recipe">
            <article>
              <figure>
                <img src="<%=recipe.image%>" alt="<%=recipe.name%>" />
              </figure>

              <h3>
                <%=recipe.name%>
              </h3>

              <h4>
                <%=recipe.user.username%>
              </h4>

              <ul class="categories">
                <% recipe.categories.forEach(cat=> { %>
                  <li>#<%=cat%>
                  </li>
                  <% })%>
              </ul>

              <p class="desc">
                <%=recipe.description.substr(0, 100)%> ...
              </p>

              <h6 class="likes">
                <%=recipe.likes%>
              </h6>
            </article>
          </a>
          <% }) %>
            <% } else {%>
              <h3 class="message">You have not liked any recipes yet, view all recipes <a href="/recipes">here</a>
              </h3>
              <%}%>
    </section>

    <%- include('../partials/profile-sidebar'); -%>
  </main>

  <%- include('../partials/footer'); -%>